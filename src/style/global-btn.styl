.btn-note
  display: inline-flex
  align-items: center
  justify-content: center
  font-size: .875rem
  letter-spacing: .25px
  border-radius: 4px
  cursor: pointer
  font-weight: 500
  height: 36px
  min-width: 80px
  padding: 0 16px
  opacity 0.7
  margin: 0 5px

  &:hover
    opacity 1

  &.btn-blue
    background-color: #1a73e8
    color: #fff

  &.btn-gray
    background-color:#757575
    color: #fff

.btn-icon
  width: 30px
  height: 30px
  border-radius: 50%
  display: inline-flex
  align-items: center
  justify-content: center
  border: solid 1px
  background: #757575
  color: white
  margin: 0 2px

  &:hover
    background-color: white
    cursor: pointer

    &.icon-red
      color: red

    &.icon-orange
      color: #fe8120
