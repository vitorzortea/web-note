@import '../../../../style/global-btn'
#single-note
  display: flex
  flex-direction: column
  min-height: 100%
  width: 100%
  input, textarea, select
    width: 100%
    padding: 10px
    border: solid 1px#e7e7e7
    border-radius: 8px
    margin-bottom: 5px

  textarea
    flex: auto
    margin-bottom: 15px

  input
    padding: 8px 10px
    font-weight: bolder
    font-size: 1.3em
  select
    font-size: .8em

  &>span
    display: flex
    align-items: center
    justify-content: space-between

#pdf
  position: absolute
  left 0
  width: 820px
  background: white
  text-align: justify

#share-user
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 100
  visibility: hidden
  display: flex
  align-items: center
  justify-content: center
  opacity 0
  transition: .5s visibility, .5s opacity

  &.active
    opacity 1
    visibility: visible
    z-index: 100

  &>span
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(0,0,0,0.8)
    z-index: 1

  &>div
    width: 100%
    max-width: 600px
    padding: 20px
    background-color: white
    border-radius: 10px
    position relative
    z-index 2

    &>.fa-times-circle
      position: absolute
      top: -10px
      right -10px
      display: flex
      align-items: center
      justify-content: center
      width: 40px
      height 40px
      background-color: white
      color: red
      border: solid 4px white
      border-radius: 50%
      font-size: 24px

      &:hover
        background-color: red
        color: white
        cursor pointer


    h3
      font-size: 1.3em
      text-transform: uppercase
      font-weight: normal
      text-align: center
      margin-bottom: 20px

    label
      display: inline-flex
      align-items: center
      margin: 5px 10px
      cursor pointer

      input
        display: none

      i
        font-size: 1.2em
        opacity: 0.8
        display: table
        vertical-align: middle
        margin-right: 5px

        &.fa-check-square
          color: #fe8120
          opacity 1
