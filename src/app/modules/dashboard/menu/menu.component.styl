header
  background-image: linear-gradient(to top, #d6d6d6 0%, #dcdcdc 10%, #f7f7f7 20%, #fff 97%, #f5f5f4 100%)
  width: 300px
  display: flex
  flex-direction: column
  min-height: 100%
  padding 20px
  border-right: solid 1px #d0cec6

  h1
    display: table
    width: 150px
    margin: 0 auto 20px

  nav
    border-bottom: solid 1px #a3a3a3
    padding-bottom: 10px
    margin-bottom: 10px

    a
      display: table
      width: calc(100% + 20px)
      padding: 5px 20px
      margin-left: -20px
      position: relative
      overflow hidden

      span
        position relative
        z-index 2
        transition: .5s

      &.active span
        color: white

      &::before
        content: ''
        background-color: #c3c3c3
        position: absolute
        top: 0
        left 0
        width: 100%
        height: 100%
        border-radius: 0 20px 20px 0
        transform: translate(-100%, 0)
        transition: .5s

      &.active::before
        background-color: #fe8102

      &:hover::before, &.active::before
        transform: translate(0, 0)

  #tags
    padding-bottom: 10px
    flex: auto

    a
      display: table
      width: 100%
      background-color: #c3c3c3
      line-height: 1em
      padding: 5px 10px
      margin: 5px 0
      border-radius: 5px

      &:hover
        background-color: #fe8102
        color: white

      &:hover
        background-color: #606060
        color: white

    button
      font-size: 0.8em
      color: #fe8102

      &:hover
        text-decoration: underline
        cursor: pointer

  #footer-header
    button:hover
      color: #fe8102
      cursor pointer

  i
    padding-right: 2px
    opacity: 0.5


